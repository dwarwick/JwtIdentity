@page "/"
@inherits JwtIdentity.Client.Pages.HomeModel
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@rendermode InteractiveWebAssembly

<PageTitle>Survey Shark - Effortless Online Surveys</PageTitle>
<HeadContent>
    <meta name="keywords" content="online surveys, survey maker, business insights, market research, customer feedback, Survey Shark, AI survey, survey platform, best survey tools" />
</HeadContent>

<MudContainer Class="mt-8 mb-10">
    <!-- Hero Section -->
    <MudPaper Elevation="3" Class="pa-8 text-center mb-8 hero-section">
        <MudText Typo="Typo.h1" Class="mb-2">Create Powerful Online Surveys in Minutes</MudText>
        <MudText Typo="Typo.h5" Class="mb-4">Effortless, secure, and AI-powered survey creation for everyone.</MudText>
        <MudButton Href="/register" Variant="Variant.Filled" Color="Color.Primary" Size="MudBlazor.Size.Large" Class="px-8 py-2 mb-2" Style="font-size: 1.2rem;">Get Started Free</MudButton>
        @* <MudButton OnClick="StartDemo" Disabled="@DemoLoading" Variant="Variant.Outlined" Color="Color.Secondary" Size="MudBlazor.Size.Large" Class="px-8 py-2 ms-2 mb-2" Style="font-size: 1.2rem;">Try Demo</MudButton> *@
    </MudPaper>

    <!-- Features Section -->
    <MudGrid Spacing="2" Class="mb-8">
        <MudItem xs="12" md="4">
            <MudCard Elevation="2" Class="h-100 text-center pa-4">
                <MudIcon Icon="@Icons.Material.Filled.Bolt" Size="MudBlazor.Size.Large" Color="Color.Primary" Class="mb-2" />
                <MudText Typo="Typo.h6" Class="mb-1">AI-Powered Question Generation</MudText>
                <MudText Typo="Typo.body2" Class="mb-2">Describe your survey and let our AI suggest relevant questions instantly.</MudText>
                <MudButton Href="/learn-more/ai" Variant="Variant.Text" Color="Color.Primary" Size="MudBlazor.Size.Small">Learn More</MudButton>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudCard Elevation="2" Class="h-100 text-center pa-4">
                <MudIcon Icon="@Icons.Material.Filled.Insights" Size="MudBlazor.Size.Large" Color="Color.Info" Class="mb-2" />
                <MudText Typo="Typo.h6" Class="mb-1">Real-Time Analytics</MudText>
                <MudText Typo="Typo.body2" Class="mb-2">Visualize responses and gain insights as soon as they arrive.</MudText>
                <MudButton Href="/learn-more/analytics" Variant="Variant.Text" Color="Color.Primary" Size="MudBlazor.Size.Small">Learn More</MudButton>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudCard Elevation="2" Class="h-100 text-center pa-4">
                <MudIcon Icon="@Icons.Material.Filled.PhoneIphone" Size="MudBlazor.Size.Large" Color="Color.Success" Class="mb-2" />
                <MudText Typo="Typo.h6" Class="mb-1">Mobile-Ready & Responsive</MudText>
                <MudText Typo="Typo.body2" Class="mb-2">Surveys look great and work perfectly on any device.</MudText>
                <MudButton Href="/learn-more/mobile" Variant="Variant.Text" Color="Color.Primary" Size="MudBlazor.Size.Small">Learn More</MudButton>
            </MudCard>
        </MudItem>
    </MudGrid>

    <!-- How It Works Section -->
    <MudPaper Elevation="1" Class="pa-6 text-center mb-8">
        <MudText Typo="Typo.h5" Class="mb-2">How Survey Shark Works</MudText>
        <MudList T="string" Dense="true" Class="mb-2">
            <MudListItem Icon="@Icons.Material.Filled.Create" IconColor="Color.Primary">Sign up and create your first survey in seconds</MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.Bolt" IconColor="Color.Info">Use AI to generate or customize your questions</MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.Share" IconColor="Color.Success">Share your survey and watch results in real time</MudListItem>
        </MudList>
    </MudPaper>

    <!-- Final CTA -->
    <MudPaper Elevation="2" Class="pa-6 text-center">
        <MudText Typo="Typo.h4" Class="mb-3">Ready to Get Started?</MudText>
        <MudButton Href="/register" Variant="Variant.Filled" Color="Color.Primary" Size="MudBlazor.Size.Large" Class="px-8 py-2" Style="font-size: 1.2rem;">Sign Up Free</MudButton>
    </MudPaper>
</MudContainer>
