@page "/demo"
@namespace JwtIdentity.Client.Pages.Demo
@inherits DemoLandingModel
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@rendermode InteractiveWebAssembly

<PageTitle>Survey Shark - Demo Overview</PageTitle>

<MudContainer Class="mt-8 mb-10">
    <MudPaper Elevation="3" Class="pa-6 mb-6">
        <MudStack Spacing="2">
            <MudText Typo="Typo.h1">Explore the Survey Shark Interactive Demo</MudText>
            <MudText Typo="Typo.body1">
                This guided walkthrough will sign you in as a temporary demo user and showcase how Survey Shark helps you plan,
                build, and publish professional surveys. Follow the on-screen prompts as the demo creates a survey, reviews AI generated
                content, and walks through the publishing experience.
            </MudText>
            <MudAlert Severity="Severity.Info" Variant="Variant.Outlined">
                <MudText Typo="Typo.body2">
                    During the demo the system fills in each field for you so you can focus on the workflow. Text boxes are read-only for
                    demo users, but you can replay the tour at any time to review specific steps.
                </MudText>
            </MudAlert>
            <MudStack Row="true" Spacing="1" Class="mt-2" Wrap="@Wrap.Wrap">
                <SpinnerButton Text="Start the Demo"
                               OnClick="BeginDemo"
                               IsBusy="@IsStartingDemo"
                               Disabled="@IsStartingDemo"
                               ButtonType="ButtonType.Button"
                               Color="Color.Primary" />
                <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Href="/">Return Home</MudButton>
            </MudStack>
        </MudStack>
    </MudPaper>

    <MudGrid Spacing="3" Class="mb-6">
        <MudItem xs="12" md="4">
            <MudPaper Elevation="1" Class="pa-4 h-100">
                <MudText Typo="Typo.h5" Class="mb-2">What You&apos;ll See</MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Create" IconColor="Color.Primary">Creating a survey with AI assistance</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.EditNote" IconColor="Color.Info">Reviewing and refining autogenerated questions</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.AddCircle" IconColor="Color.Secondary">Creating a new question</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Visibility" IconColor="Color.Info">Preview the survey before it is published or before you share it</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Celebration" IconColor="Color.Success">Publishing your survey to share with participants</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Link" IconColor="Color.Primary">How to share a link to the survey so others can answer your survey</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">You will answer the survey as a survey taker</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Share" IconColor="Color.Secondary">How to share the survey to Facebook</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.PieChart" IconColor="Color.Info">How to analyze the survey responses on Pie and Bar charts</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.GridOn" IconColor="Color.Primary">How to analyze the survey responses in a sortable and filterable grid</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.FileDownload" IconColor="Color.Warning">How to export the survey results to Excel for more robust analysis</MudListItem>                    
                </MudList>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudPaper Elevation="1" Class="pa-4 h-100">
                <MudText Typo="Typo.h5" Class="mb-2">How to Navigate</MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.PlayArrow" IconColor="Color.Primary">Follow the highlighted borders and popups to advance through each step.</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Visibility" IconColor="Color.Info">Watch how the demo fills in content and updates survey settings in real time.</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Replay" IconColor="Color.Success">Need to see it again? Restart the demo from this page whenever you like.</MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudPaper Elevation="1" Class="pa-4 h-100">
                <MudText Typo="Typo.h5" Class="mb-2">Tips While Watching</MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Lock" IconColor="Color.Warning">Text fields are locked during the demo to keep the walkthrough on track.</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Lightbulb" IconColor="Color.Info">Look for callouts that explain why certain actions are taken.</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.QuestionAnswer" IconColor="Color.Primary">Use what you learn here when you build surveys with your own account.</MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <MudPaper Elevation="1" Class="pa-5">
        <MudText Typo="Typo.h5" Class="mb-2">Demo Flow Overview</MudText>
        <MudTimeline TimelinePosition="TimelinePosition.Start" >
            <MudTimelineItem Color="Color.Primary" >
                <MudText Typo="Typo.h6">Create Survey</MudText>
                <MudText Typo="Typo.body2">Learn how Survey Shark uses titles, descriptions, and AI prompts to build a survey foundation.</MudText>
            </MudTimelineItem>
            <MudTimelineItem Color="Color.Info">
                <MudText Typo="Typo.h6">Review and Create Questions</MudText>
                <MudText Typo="Typo.body2">See how autogenerated questions can be accepted, regenerated, or fine-tuned.</MudText>
            </MudTimelineItem>
            <MudTimelineItem Color="Color.Success">
                <MudText Typo="Typo.h6">Publish &amp; Share</MudText>
                <MudText Typo="Typo.body2">Publish the survey so it&apos;s ready for real participants.</MudText>
            </MudTimelineItem>           
            <MudTimelineItem Color="Color.Info">
                <MudText Typo="Typo.h6">Preview the Survey</MudText>
                <MudText Typo="Typo.body2">Preview the survey before it is published or before you share it.</MudText>
            </MudTimelineItem>
            <MudTimelineItem Color="Color.Secondary">
                <MudText Typo="Typo.h6">Share the Survey</MudText>
                <MudText Typo="Typo.body2">Generate share links or post to social media.</MudText>
            </MudTimelineItem>
            <MudTimelineItem Color="Color.Primary">
                <MudText Typo="Typo.h6">Answer the Survey</MudText>
                <MudText Typo="Typo.body2">Experience the survey as a participant to see the flow.</MudText>
            </MudTimelineItem>
            <MudTimelineItem Color="Color.Info">
                <MudText Typo="Typo.h6">Review the Responses</MudText>
                <MudText Typo="Typo.body2">Analyze responses using charts, grids, and exports.</MudText>
            </MudTimelineItem>
        </MudTimeline>
    </MudPaper>

    <MudPaper Elevation="1" Class="pa-5 mt-6">
        <MudText Typo="Typo.h5" Class="mb-3">Watch the Survey Shark Demo Walkthrough</MudText>
       
            <iframe class="video-container"
                    src="https://www.youtube.com/embed/v0XqRue1aAM"
                    title="Survey Shark Demo Video"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    allowfullscreen>
            </iframe>

    </MudPaper>
</MudContainer>
