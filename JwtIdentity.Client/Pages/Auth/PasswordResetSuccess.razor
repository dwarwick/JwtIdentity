@page "/password-reset-success"
@inherits PasswordResetSuccessModel

<MudCard Class="mt-3 pa-4" Style="max-width: 500px; margin: auto;">
    <MudCardHeader>
        <MudText Typo="Typo.h5">Password Reset Successful</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudAlert Severity="Severity.Success" Class="my-4">
            Your password has been reset successfully.
        </MudAlert>
        <MudText Typo="Typo.body2">
            You can now log in with your new password.
        </MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/login">Go to Login</MudButton>
    </MudCardActions>
</MudCard>