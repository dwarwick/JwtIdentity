@page "/password-reset-sent"
@inherits PasswordResetSentModel

<PageTitle>Survey Shark - Password Reset Sendt</PageTitle>

<MudCard Class="mt-3 pa-4" Style="max-width: 700px; margin: auto;">
    <MudCardHeader>
        <MudText Typo="Typo.h5">Check Your Email</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body1" Class="mb-3">
            We've sent a password reset link to <b>@Email</b>.
        </MudText>
        <MudText Typo="Typo.body2">
            Please check your email and click on the link to reset your password. 
            If you don't see the email, check your spam folder.
            The email should arrive within a few minutes.
        </MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/login">Back to Login</MudButton>
    </MudCardActions>
</MudCard>