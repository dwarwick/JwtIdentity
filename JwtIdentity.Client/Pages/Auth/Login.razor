@page "/login"
<h3>Login</h3>

<EditForm Model="applicationUserViewModel" OnValidSubmit="HandleLogin" FormName="LoginForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="UserName">Username</label>
        <InputText id="username" class="form-control" @bind-Value="applicationUserViewModel.UserName" />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="applicationUserViewModel.Password" />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</EditForm>

@code {
    private ApplicationUserViewModel applicationUserViewModel = new ();


    private async Task HandleLogin()
    {
        Response<ApplicationUserViewModel> response = await AuthService.Login(applicationUserViewModel);
        if (!response.Success)        
        {
            // Handle login failure
        }
        else
        {
            Navigation.NavigateTo("/");
        }
    }
}
