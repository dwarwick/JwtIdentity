@page "/login"
@inherits LoginModel

@using static Microsoft.AspNetCore.Components.Web.RenderMode
@rendermode InteractiveWebAssembly

<PageTitle>Survey Shark - Login</PageTitle>

<HeadContent>
    <meta name="description" content="Log in to your Survey Shark account to manage surveys and view responses." />
</HeadContent>

<MudText Typo="Typo.h1" Class="mb-4">Login</MudText>

<EditForm Model="applicationUserViewModel" OnValidSubmit="HandleLogin" FormName="LoginForm">
    <DataAnnotationsValidator />
    <ValidationSummary />
    
        <MudTextField id="username" @bind-Value="applicationUserViewModel.UserName" InputType="InputType.Text" autocomplete="username" For="@(() => applicationUserViewModel.UserName)" Label="Email" />
    <MudTextField id="password" InputType="InputType.Password" autocomplete="current-password" @bind-Value="applicationUserViewModel.Password" For="@(() => applicationUserViewModel.Password)" Label="Password" />

    <MudStack Row="true" Class="mt-3">
        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Login</MudButton>
        <MudLink Href="/forgot-password" Class="ml-auto align-self-center">Forgot Password?</MudLink>
    </MudStack>
</EditForm>