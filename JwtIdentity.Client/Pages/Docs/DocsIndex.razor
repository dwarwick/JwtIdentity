@page "/documentation"
@layout DocsLayout
@inherits JwtIdentity.Client.Pages.Docs.DocsIndexModel
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@rendermode InteractiveWebAssembly

<PageTitle>SurveyShark Documentation</PageTitle>
<HeadContent>
    <meta name="description" content="SurveyShark documentation hub for getting started, creating surveys, managing content, publishing, answering, viewing results, and collecting feedback." />
</HeadContent>

<section class="docs-hero">
    <h1>SurveyShark Documentation</h1>
    <MudText Typo="Typo.subtitle1" Class="mb-4">
        Discover everything you need to launch a survey, fine-tune content, share links, guide respondents, and review analytics. Use the shortcuts below or search to jump straight to a walkthrough.
    </MudText>
</section>

<section id="start-here" class="mb-8">
    <MudPaper Class="pa-6 docs-highlight">
        <MudStack Row="true" Spacing="3" AlignItems="AlignItems.Center" Class="flex-wrap">
            <MudIcon Icon="@Icons.Material.Filled.Lightbulb" Color="Color.Warning" Size="MudBlazor.Size.Large" />
            <div>
                <MudText Typo="Typo.h5">New to SurveyShark?</MudText>
                <MudText Typo="Typo.body1">Start with the Getting Started guide to create your account, build your first survey, and invite participants.</MudText>
            </div>
            <MudSpacer />
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/docs/getting-started">Start building</MudButton>
        </MudStack>
    </MudPaper>
</section>

<section id="explore-sections" class="mb-10">
    <MudText Typo="Typo.h2" Class="mb-4">Explore key sections</MudText>
    <MudGrid Spacing="2">
        <MudItem xs="12" md="6">
            <MudPaper Class="docs-card" Elevation="1">
                <MudText Typo="Typo.h5">Getting Started</MudText>
                <MudText Typo="Typo.body2">Set up your workspace, invite teammates, and learn the basics of the survey builder.</MudText>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/docs/getting-started">Read guide</MudButton>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Class="docs-card" Elevation="1">
                <MudText Typo="Typo.h5">Creating Surveys</MudText>
                <MudText Typo="Typo.body2">Generate prompts with AI, craft questions manually, and reuse your best content.</MudText>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/docs/creating-surveys">Build surveys</MudButton>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Class="docs-card" Elevation="1">
                <MudText Typo="Typo.h5">Managing Content</MudText>
                <MudText Typo="Typo.body2">Reorder questions, tidy up answer choices, and keep surveys organized.</MudText>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/docs/managing-content">Manage content</MudButton>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Class="docs-card" Elevation="1">
                <MudText Typo="Typo.h5">Publishing &amp; Sharing</MudText>
                <MudText Typo="Typo.body2">Publish confidently and distribute links across email, SMS, or social networks.</MudText>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/docs/publishing-and-sharing">Share surveys</MudButton>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Class="docs-card" Elevation="1">
                <MudText Typo="Typo.h5">Answering Surveys</MudText>
                <MudText Typo="Typo.body2">Help respondents understand question types and submit responses with confidence.</MudText>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/docs/answering-surveys">Coach respondents</MudButton>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Class="docs-card" Elevation="1">
                <MudText Typo="Typo.h5">Viewing Results</MudText>
                <MudText Typo="Typo.body2">Analyze responses in grids or charts and export visuals for stakeholders.</MudText>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/docs/viewing-results">Review analytics</MudButton>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Class="docs-card" Elevation="1">
                <MudText Typo="Typo.h5">Feedback</MudText>
                <MudText Typo="Typo.body2">Collect thoughtful suggestions and bug reports from the team.</MudText>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/docs/feedback">Invite feedback</MudButton>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Class="docs-card" Elevation="1">
                <MudText Typo="Typo.h5">FAQs</MudText>
                <MudText Typo="Typo.body2">Get quick answers about accounts, survey building, analytics, and support.</MudText>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/docs/faq">See FAQs</MudButton>
            </MudPaper>
        </MudItem>
    </MudGrid>
</section>

<section id="latest-updates" class="mb-10">
    <MudText Typo="Typo.h2" Class="mb-4">Latest updates</MudText>
    <MudPaper Class="pa-4">
        <MudStack Spacing="3">
            <div class="docs-update">
                <MudIcon Icon="@Icons.Material.Filled.NewReleases" Color="Color.Primary" Class="docs-update-icon" />
                <div>
                    <MudText Typo="Typo.caption" Class="docs-update-date">September 2025</MudText>
                    <MudText Typo="Typo.subtitle2">Documentation refresh</MudText>
                    <MudText Typo="Typo.body2">The docs now mirror the classic tabbed experience with dedicated pages for creating, managing, publishing, answering, viewing results, and leaving feedback.</MudText>
                </div>
            </div>
            <div class="docs-update">
                <MudIcon Icon="@Icons.Material.Filled.Search" Color="Color.Success" Class="docs-update-icon" />
                <div>
                    <MudText Typo="Typo.caption" Class="docs-update-date">September 2025</MudText>
                    <MudText Typo="Typo.subtitle2">Improved search snippets</MudText>
                    <MudText Typo="Typo.body2">Search results highlight the exact step-by-step instructions pulled from the new markdown sources.</MudText>
                </div>
            </div>
            <div class="docs-update">
                <MudIcon Icon="@Icons.Material.Filled.Insights" Color="Color.Info" Class="docs-update-icon" />
                <div>
                    <MudText Typo="Typo.caption" Class="docs-update-date">August 2025</MudText>
                    <MudText Typo="Typo.subtitle2">Results dashboards spotlight</MudText>
                    <MudText Typo="Typo.body2">Viewing Results now documents export options, chart toggles, and filtering tips for faster analysis.</MudText>
                </div>
            </div>
        </MudStack>
    </MudPaper>
</section>
