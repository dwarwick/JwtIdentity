@page "/docs/components/bar-chart"
@layout _DocsLayout
@inherits JwtIdentity.Client.Pages.Docs.Components.BarChartModel
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@rendermode InteractiveWebAssembly

<PageTitle>Bar Chart Component</PageTitle>
<HeadContent>
    <meta name="description" content="Configure the SurveyShark bar chart component for survey analytics dashboards." />
</HeadContent>

<h1>Bar Chart component</h1>
<MudText Typo="Typo.subtitle1" Class="mb-6">Visualize response counts, completion rates, or satisfaction scores with an accessible MudBlazor-based bar chart.</MudText>

<section id="component-overview" class="mb-8">
    <MudText Typo="Typo.h2" Class="mb-3">Component overview</MudText>
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.body1">SurveyShark wraps <code>MudChart</code> with sensible defaults for analytics pages. The component supports responsive resizing, theming, and custom tooltips.</MudText>
        <pre class="docs-code mt-3">@BarChartSample</pre>
    </MudPaper>
</section>

<section id="configuration" class="mb-8">
    <MudText Typo="Typo.h2" Class="mb-3">Configuration options</MudText>
    <MudGrid Spacing="2">
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4 h-100">
                <MudText Typo="Typo.h6">Data and labels</MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.DataUsage">Bind <code>ChartOptions</code> to dynamic series sourced from API responses.</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Label">Provide descriptive axis labels so users can read values without hovering.</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.AutoAwesome">Use <code>Formatting</code> callbacks to append percentage or currency symbols.</MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4 h-100">
                <MudText Typo="Typo.h6">Appearance</MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Palette">Colors inherit from the active theme. Override with <code>ChartOptions.Palette</code> for custom branding.</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.ViewAgenda">Enable horizontal bars for readability on long question labels.</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.TipsAndUpdates">Add tooltips with contextual insights such as target benchmarks.</MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>
    </MudGrid>
</section>

<section id="accessibility" class="mb-8">
    <MudText Typo="Typo.h2" Class="mb-3">Accessibility guidance</MudText>
    <MudList T="string">
        <MudListItem T="string" Icon="@Icons.Material.Filled.AltRoute">Provide a textual summary beneath each chart for screen-reader users.</MudListItem>
        <MudListItem T="string" Icon="@Icons.Material.Filled.Tune">Maintain a minimum contrast ratio of 4.5:1 between adjacent bars.</MudListItem>
        <MudListItem T="string" Icon="@Icons.Material.Filled.Keyboard">Ensure keyboard users can tab to interactive legends and tooltips.</MudListItem>
    </MudList>
</section>

<section id="troubleshooting" class="mb-8">
    <MudText Typo="Typo.h2" Class="mb-3">Troubleshooting tips</MudText>
    <MudExpansionPanels>
        <MudExpansionPanel Text="Empty chart renders">
            <MudText Typo="Typo.body2">Confirm your API call returns data and that <code>ChartData</code> contains at least one series.</MudText>
        </MudExpansionPanel>
        <MudExpansionPanel Text="Tooltip formatting is incorrect">
            <MudText Typo="Typo.body2">Verify that the <code>Formatting</code> callback handles null values and uses the invariant culture when required.</MudText>
        </MudExpansionPanel>
        <MudExpansionPanel Text="Layout shifts on mobile">
            <MudText Typo="Typo.body2">Wrap the chart in a <code>MudPaper</code> with padding and enable horizontal scrolling for wide legends.</MudText>
        </MudExpansionPanel>
    </MudExpansionPanels>
</section>
