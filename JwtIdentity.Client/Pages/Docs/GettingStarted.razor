@page "/docs/getting-started"
@layout _DocsLayout
@inherits JwtIdentity.Client.Pages.Docs.GettingStartedModel
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@rendermode InteractiveWebAssembly

<PageTitle>Getting Started with SurveyShark</PageTitle>
<HeadContent>
    <meta name="description" content="Create your SurveyShark account, log in securely, and launch your first survey." />
</HeadContent>

<h1>Getting Started with SurveyShark</h1>
<MudText Typo="Typo.subtitle1" Class="mb-6">This guide walks you through creating a secure account, signing in, and publishing your first survey.</MudText>

<section id="create-account" class="mb-8">
    <MudText Typo="Typo.h2" Class="mb-3">Create your SurveyShark account</MudText>
    <MudPaper Class="pa-4 mb-4">
        <MudText Typo="Typo.h6" Class="mb-2">Registration checklist</MudText>
        <MudList T="string">
            <MudListItem T="string" Icon="@Icons.Material.Filled.Person">Select <strong>Register</strong> in the top navigation.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Email">Provide an email address you can verify immediately.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Lock">Choose a password with at least eight characters, including uppercase, lowercase, number, and symbol.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Verified">Confirm the password to avoid typos.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.MarkEmailRead">Open the verification email and activate your account.</MudListItem>
        </MudList>
    </MudPaper>
    <MudAlert Severity="Severity.Info" Variant="Variant.Outlined">
        Verification links expire after 24 hours. Request a new email from the login page if you miss the window.
    </MudAlert>
</section>

<section id="log-in" class="mb-8">
    <MudText Typo="Typo.h2" Class="mb-3">Sign in securely</MudText>
    <MudGrid Spacing="2">
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4 h-100">
                <MudText Typo="Typo.h6">Standard login</MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Login">Open the <strong>Login</strong> dialog from the navigation bar.</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Email">Enter the email address you registered.</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Password">Type your password and select <strong>Login</strong>.</MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4 h-100">
                <MudText Typo="Typo.h6">Reset a forgotten password</MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Help">Choose <strong>Forgot Password?</strong> to launch the reset wizard.</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.MarkEmailUnread">Check your inbox for the secure reset link.</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Password">Create a new password that meets security requirements.</MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>
    </MudGrid>
    <MudAlert Severity="Severity.Warning" Variant="Variant.Outlined" Class="mt-4">
        Always sign out on shared devices by selecting <strong>Logout</strong> from the navigation bar.
    </MudAlert>
</section>

<section id="first-survey" class="mb-8">
    <MudText Typo="Typo.h2" Class="mb-3">Launch your first survey</MudText>
    <MudPaper Class="pa-4 mb-4">
        <MudText Typo="Typo.h6" Class="mb-2">Create a survey shell</MudText>
        <MudList T="string">
            <MudListItem T="string" Icon="@Icons.Material.Filled.AddCircle">Navigate to <strong>Surveys &gt; Create Survey</strong>.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Title">Enter a descriptive survey title.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Description">Summarize the purpose for respondents.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Save">Select <strong>Create</strong> to open the question builder.</MudListItem>
        </MudList>
    </MudPaper>
    <MudPaper Class="pa-4 mb-4">
        <MudText Typo="Typo.h6" Class="mb-2">Add questions with or without AI</MudText>
        <MudList T="string">
            <MudListItem T="string" Icon="@Icons.Material.Filled.SmartToy">Enable <strong>Use AI to Generate Questions</strong> for instant recommendations.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.TipsAndUpdates">Supply optional instructions to steer tone, length, or audience.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Edit">Review each suggestionâ€”you can edit, delete, or add manual questions at any time.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Security">Survey content is processed securely; personal data is never shared.</MudListItem>
        </MudList>
    </MudPaper>
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.h6" Class="mb-2">Share with participants</MudText>
        <MudList T="string">
            <MudListItem T="string" Icon="@Icons.Material.Filled.Share">Publish the survey to generate a shareable link.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.People">Invite respondents via email or embed the link in your website.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Logout">Close the survey at any time to stop collecting responses.</MudListItem>
        </MudList>
    </MudPaper>
</section>

<section id="next-steps" class="mb-8">
    <MudText Typo="Typo.h2" Class="mb-3">Next steps</MudText>
    <MudList T="string">
        <MudListItem T="string" Icon="@Icons.Material.Filled.VerifiedUser">Assign roles so teammates can collaborate safely.</MudListItem>
        <MudListItem T="string" Icon="@Icons.Material.Filled.Assessment">Review live analytics from the <strong>Results</strong> dashboard.</MudListItem>
        <MudListItem T="string" Icon="@Icons.Material.Filled.FileDownload">Export responses to CSV or Excel using the Export Results guide.</MudListItem>
    </MudList>
</section>
