@page "/docs/managing-content"
@layout _DocsLayout
@inherits JwtIdentity.Client.Pages.Docs.ManagingContentModel
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@rendermode InteractiveWebAssembly

<PageTitle>Managing Survey Content</PageTitle>
<HeadContent>
    <meta name="description" content="Organize SurveyShark questions by reordering, refining, and cleaning up survey content." />
</HeadContent>

<h1>Managing Content</h1>
<MudText Typo="Typo.subtitle1" Class="mb-6">Keep surveys polished by organizing questions, tuning answer choices, and removing outdated items.</MudText>

<section id="reorder-questions" class="mb-8">
    <MudText Typo="Typo.h2" Class="mb-3">Reorder questions</MudText>
    <MudPaper Class="pa-4">
        <MudList T="string">
            <MudListItem T="string" Icon="@Icons.Material.Filled.DragIndicator">Use the drag handle beside each question to grab it.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.TouchApp">Drag the question up or down to choose a new position.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.SwapVert">Release the mouse or lift your finger to drop it in place.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Update">SurveyShark automatically saves the updated order.</MudListItem>
        </MudList>
    </MudPaper>
</section>

<section id="reorder-options" class="mb-8">
    <MudText Typo="Typo.h2" Class="mb-3">Reorder answer choices</MudText>
    <MudPaper Class="pa-4">
        <MudList T="string">
            <MudListItem T="string" Icon="@Icons.Material.Filled.List">Choose a multiple choice or select-all question to edit.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.DragIndicator">Grab the drag icon next to an option.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.SwapVert">Move the option higher or lower until it fits the desired flow.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Update">Release to save—no extra clicks required.</MudListItem>
        </MudList>
    </MudPaper>
</section>

<section id="delete-content" class="mb-8">
    <MudText Typo="Typo.h2" Class="mb-3">Delete questions and options</MudText>
    <MudPaper Class="pa-4">
        <MudList T="string">
            <MudListItem T="string" Icon="@Icons.Material.Filled.DeleteForever">Select the trash icon next to a question to remove it permanently.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Warning">Confirm the deletion when prompted—this action cannot be undone.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.HighlightOff">To remove an answer choice, choose the option and select its trash icon.</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Info">Clean up unused items before publishing to ensure a smooth respondent experience.</MudListItem>
        </MudList>
    </MudPaper>
</section>
